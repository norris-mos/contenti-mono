{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./build"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
